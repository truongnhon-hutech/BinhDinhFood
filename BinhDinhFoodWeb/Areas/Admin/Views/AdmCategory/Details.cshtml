@model BinhDinhFood.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>Chi tiết loại chi tiết</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdmHome">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Quản lý loại chi tiết</a> </li>
            <li class="breadcrumb-item active">Chi tiết</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Chi tiết loại sản phẩm</h5>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryDateCreated)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CategoryDateCreated)
            </dd>
        </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning rounded-pill"><i class="bi bi-pencil"></i></a>
    <a class="btn btn-dark rounded-pill" asp-action="Index"><i class="bi bi-caret-left"></i>Trở về</a>
</div>
