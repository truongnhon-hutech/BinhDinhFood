@model Blog 
@{ ViewData["Title"] = "Delete"; Layout =
"~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<div class="pagetitle">
  <h1>Xoá bài viết</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a asp-action="Index" asp-controller="AdmHome">Trang chủ</a>
      </li>
      <li class="breadcrumb-item">
        <a asp-action="Index">Quản lý bài viết</a>
      </li>
      <li class="breadcrumb-item active">Xoá bài viết</li>
    </ol>
  </nav>
</div>
<!-- End Page Title -->

<h3>Bạn có thật sự muốn xoá?</h3>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Chi tiết bài viết</h5>
    <div>
      <h4>Bài viết</h4>
      <hr />
      <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BlogName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BlogName)</dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.BlogContent)
        </dt>
        <dd class="col-sm-10">@Html.Raw(@Model.BlogContent)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BlogImage)</dt>
        <dd class="col-sm-10">
          <img
            width="100"
            src="~/Content/img/products/@Html.DisplayFor(modelItem => modelItem.BlogImage)"
            alt="@Html.DisplayFor(modelItem => modelItem.BlogImage)"
          />
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.BlogDateCreated)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.BlogDateCreated)
        </dd>
      </dl>
    </div>
  </div>
</div>
<form asp-action="Delete">
  <input type="hidden" asp-for="BlogId" />
  <input type="submit" value="Xoá" class="btn btn-danger rounded-pill" />
  <a class="btn btn-dark rounded-pill" asp-action="Index"
    ><i class="bi bi-caret-left"></i>Trở về</a>
</form>
