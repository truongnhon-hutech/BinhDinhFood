@model Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Quản lý sản phẩm</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdmHome">Trang chủ</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index">Quản lý sản phẩm</a></li>
            <li class="breadcrumb-item active">Xoá sản phẩm</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<h3>Bạn có thật sự muốn xoá?</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Chi tiết bài viết</h5>
        <div>
            <h4>Bài viết</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductDescription)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductAmount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductAmount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductDiscount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductDiscount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductImage)
                </dt>
                <dd class="col-sm-10">
                    <img width="100" src="~/Content/img/products/@Html.DisplayFor(modelItem => modelItem.ProductImage)" alt="@Html.DisplayFor(modelItem => modelItem.ProductImage)" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductDateCreated)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductDateCreated)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
            </dl>
        </div>
    </div>
</div>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Xoá" class="btn btn-danger rounded-pill" />
        <a class="btn btn-dark rounded-pill" asp-action="Index"><i class="bi bi-caret-left"></i>Trở về</a>
    </form>
