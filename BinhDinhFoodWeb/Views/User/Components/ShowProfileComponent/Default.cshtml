@model InforViewModel

<div class="card">
  <div
    class="card-body profile-card pt-4 d-flex flex-column align-items-center"
  >
    <img
      src="~/Content/img/staff/@Html.DisplayFor(model => model.Image)"
      alt="Profile"
      class="rounded-circle"
    />
    <h2>@Html.DisplayFor(model => model.FullName)</h2>
  </div>
</div>
<h5 class="card-title">Profile Details</h5>

<div class="row">
  <div class="col-lg-3 col-md-4 label">
    @Html.DisplayNameFor(model => model.FullName)
  </div>
  <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.FullName)</div>
</div>

<div class="row">
  <div class="col-lg-3 col-md-4 label">
    @Html.DisplayNameFor(model => model.Address)
  </div>
  <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Address)</div>
</div>

<div class="row">
  <div class="col-lg-3 col-md-4 label">
    @Html.DisplayNameFor(model => model.Phone)
  </div>
  <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Phone)</div>
</div>

<div class="row">
  <div class="col-lg-3 col-md-4 label">
    @Html.DisplayNameFor(model => model.Email)
  </div>
  <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Email)</div>
</div>
