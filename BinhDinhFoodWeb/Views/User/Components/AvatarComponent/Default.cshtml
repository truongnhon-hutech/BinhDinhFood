@model InforViewModel

<div class="card">
  <div
    class="card-body profile-card pt-4 d-flex flex-column align-items-center"
  >
    <img
      src="~/Content/img/staff/@Html.DisplayFor(model => model.Image)"
      alt="Profile"
      class="rounded-circle"
    />
    <h2>@Html.DisplayFor(model => model.FullName)</h2>
    <a asp-action="Logout" asp-controller="User" class="btn_1 outline"
      >Đăng xuất</a>
  </div>
</div>
